# 3GHCRE Atlas Database Configuration
# Copy this file to .env and fill in your credentials

# Local MySQL (Docker)
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=3306
LOCAL_DB_NAME=atlas
LOCAL_DB_USER=root
LOCAL_DB_PASSWORD=your_local_password_here

# Remote 3G Database (DigitalOcean)
# Get credentials from admin - do NOT commit these values
DB_HOST=your_digitalocean_host_here
DB_PORT=25060
DB_NAME=cms_data
DB_USER=your_username_here
DB_PASSWORD=your_password_here

# Metabase (optional)
METABASE_URL=https://analytics.3ghcre.com/
METABASE_USER=your_email_here
METABASE_PASSWORD=your_password_here
